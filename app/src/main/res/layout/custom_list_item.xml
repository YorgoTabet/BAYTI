<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="15dp"
    android:background="@drawable/default_list_selector"
    android:elevation="2dp">


<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
   app:cardCornerRadius="360dp"
    android:backgroundTint="@color/colorPrimaryDark">

    <ImageView
    android:layout_width="75dp"
    android:layout_height="match_parent"
    android:id="@+id/PropertyImg"
    android:src="@mipmap/ic_launcher"
    android:scaleType="fitCenter"
    />


</androidx.cardview.widget.CardView>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="7dp"
        android:id="@+id/infoBox"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/propertyTitle"
            android:text="Property Title"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="-20sp"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@android:color/white"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/propertyDescription"
            android:text="Property Description"
            android:textStyle="italic"
            android:textSize="10sp"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@android:color/darker_gray"
            android:paddingLeft="5dp"
            />

    </LinearLayout>

    <ImageView android:src="@drawable/starred"
        android:layout_height="match_parent"
        android:layout_width="75dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/infoBox"
        android:layout_marginStart="-75dp"
        android:padding="10dp"
        android:visibility="gone"
        android:id="@+id/star"/>

</RelativeLayout>



</LinearLayout>