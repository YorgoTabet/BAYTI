<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/mesage_icon"
        android:id="@+id/propertyPreview"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/propertyPreview"
        android:layout_marginTop="10dp"
        android:id="@+id/usernametxtView"
        android:textSize="24sp"
        android:textFontWeight="1"
        android:textColor="@color/colorAccentLight"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernametxtView"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/propertyPreview"
        android:id="@+id/lastMessage"
        android:layout_marginBottom="10dp"
        android:textColor="@color/browser_actions_bg_grey"
        android:textStyle="italic"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/lastMessage"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"/>


</RelativeLayout>